<Window x:Class="Wpf6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Здарова!!! Присоеденяйся к чату или создай свой" VerticalAlignment="Center" Height="78" FontSize="20" TextAlignment="Center"/>
        <TextBox x:Name="UserName" Margin="0,0,0,20" Grid.RowSpan="2" Grid.Row="1" />
        <Button x:Name="Creat" Content="Создать свой чат"  Grid.Row="3" FontSize="20" Click="Creat_Click"/>
        <Button x:Name="Conect" Content="Присоедениться к чату" Grid.Row="4" FontSize="20" Click="Conect_Click" Margin="0,5,0,0"/>
        <TextBox x:Name="IP"  Grid.Row="5" TextWrapping="Wrap" Text="" Margin="0,20,0,0" RenderTransformOrigin="0.503,1.248" Grid.RowSpan="2" />

    </Grid>
</Window>
